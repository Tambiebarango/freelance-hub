<div class="ui secondary pointing menu">
  <%= link_to "Freelance Hub", root_path, class: "item brand-name" %>
  
  <div class="right menu">
    <% unless user_signed_in?  %>
    <%= link_to  new_user_registration_path ,class: "item right" do%>
      <i class="signup icon"></i> Join
    <% end %>
    <%= link_to  "#" ,class: "item right" do%>
      <i class="user secret icon"></i> Become a Freelancer
    <% end %>
    <%= link_to  new_user_session_path, class: "item right" do %>
      <i class="sign in icon"></i> Login
    <% end %>
    <% else %>
    <%= link_to  edit_user_registration_path , class: "item right" do %>
      <i class="settings icon"></i> Settings
    <% end %>

    <%= link_to  destroy_user_session_path ,method: :delete, data: {confirm: "Are you sure?"}, class: "item" do %>
      <i class="sign out icon"></i> Logout
    <% end %>

    <% end %>
  </div>
</div>